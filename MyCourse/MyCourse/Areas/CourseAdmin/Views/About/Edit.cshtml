@model About
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/CourseAdmin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit</h1>


<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Photo">Image</label>
        <input asp-for="Photo" accept="image/*" class="form-control" />
        <span asp-validation-for="Photo" class="text-danger"></span>

        <div class="form-group">
            <lable>Current image</lable>
            <img src="~/images/@Model.Images" class="img-thumbnail" width="200" />
        </div>

        <label asp-for="BoldWord">Qalin soz</label>
        <textarea asp-for="BoldWord" class="form-control"></textarea>
        <span asp-validation-for="BoldWord" class="text-danger"></span>

        <label asp-for="Header">Bashliq</label>
        <textarea asp-for="Header" class="form-control"></textarea>
        <span asp-validation-for="Header" class="text-danger"></span>

        <label asp-for="TitleOne">Title 1</label>
        <textarea asp-for="TitleOne" class="form-control"></textarea>
        <span asp-validation-for="TitleOne" class="text-danger"></span>

        <label asp-for="TitleTwo">Title 2</label>
        <textarea asp-for="TitleTwo" class="form-control"></textarea>
        <span asp-validation-for="TitleTwo" class="text-danger"></span>

        <label asp-for="TitleThree">Title 3</label>
        <textarea asp-for="TitleThree" class="form-control"></textarea>
        <span asp-validation-for="TitleThree" class="text-danger"></span>

    </div>
    <input type="submit" class="btn btn-success btn-block" value="Edit" />
</form>

<div class="row" style="margin-top:30px;">
    <div class="col-12">
        <a asp-action="Index" class="btn btn-primary btn-block">back to index</a>
    </div>
</div>
