@model Tutor
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/CourseAdmin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit</h1>


<form method="post" enctype="multipart/form-data" >
    <div class="form-group">
        <label asp-for="Photo">Image</label>
        <input asp-for="Photo" accept="image/*" class="form-control" />
        <span asp-validation-for="Photo" class="text-danger"></span>

        <div class="form-group">
            <lable>Current image</lable>
            <img src="~/images/@Model.image" class="img-thumbnail" width="200" />
        </div>

        <label asp-for="date">Tarix</label>
        <textarea asp-for="date" class="form-control"></textarea>
        <span asp-validation-for="date" class="text-danger"></span>

        <label asp-for="Head">Bashliq</label>
        <textarea asp-for="Head" class="form-control"></textarea>
        <span asp-validation-for="date" class="text-danger"></span>

        <label asp-for="content">Content</label>
        <textarea asp-for="content" class="form-control"></textarea>
        <span asp-validation-for="content" class="text-danger"></span>

    </div>
    <input type="submit" class="btn btn-success btn-block" value="Edit" />
</form>

<div class="row" style="margin-top:30px;">
    <div class="col-12">
        <a asp-action="Index" class="btn btn-primary btn-block">back to index</a>
    </div>
</div>